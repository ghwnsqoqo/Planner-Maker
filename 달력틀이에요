#include <stdio.h> int days[12]={31,28,31,30,31,30,31,31,30,31,30,31}; const char *wname[7]={"월","화","수","목","금","토","일"}; const char *bars[2]= //데코레이션을 위한 라인 {    "=====================================================\n",    "-----------------------------------------------------\n" }; int DrawMonth(int month,int start);//달 출력(달(0~11), 시작요일:0~6), 반환값은 다음 달 시작요일  void main()  {     int year;     int start;     int i = 0;     printf("몇 년: ");     scanf("%d",&year);     printf("1월 1일은 몇 번째 요일(일요일은 0): ");     scanf("%d",&start);     printf("[ %d년 ]\n",year);     for(i=0;i<12;i++)     {        start = DrawMonth(i,start);     }  }  int DrawMonth(int month,int start)  {     int i = 0;     printf(" << %d 월>>\n",month+1);     printf(bars[0]);     for(i=0;i<7;i++)     {        printf("%7s",wname[i]);     }     printf("\n");     printf(bars[1]);     for(i=0; i<start;i++)     {        printf("%7s"," ");     }     for(i=0; i<days[month]; i++)     {          printf("%7d",i+1);        start++;        if(start ==7)        {           start = 0;                      printf("\n");        }     }     printf("\n");     printf(bars[0]);     return start;  } 
